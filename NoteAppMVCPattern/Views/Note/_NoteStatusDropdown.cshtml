@model Note

<div class="position-absolute top-0 end-0 m-2">
    <button type="button" class="btn btn-sm btn-outline-light rounded-circle" data-bs-toggle="dropdown">
        <i class="bi bi-calendar-date"></i>
    </button>
    <div class="dropdown-menu dropdown-menu-end">
        <a class="dropdown-item" asp-action="SetStatus" asp-route-id="@Model.Id" asp-route-status="Done">
            <i class="bi bi-calendar-check"></i> Yapıldı
        </a>
        <a class="dropdown-item" asp-action="SetStatus" asp-route-id="@Model.Id" asp-route-status="Planned">
            <i class="bi bi-clock-history"></i> Planlandı
        </a>
        <a class="dropdown-item" asp-action="SetStatus" asp-route-id="@Model.Id" asp-route-status="Pending">
            <i class="bi bi-hourglass-split"></i> Yapılacak
        </a>
    </div>
</div>

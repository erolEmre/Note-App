@section Scripts {
    <script>
        $(document).on("click", ".view-note", function () {
            const id = $(this).data("id");
            $.get(`/Note/NoteDetails?noteId=${id}`, function (data) {
                $("#modal-container").html(data);
                const modal = new bootstrap.Modal(document.getElementById('myModal'));
                modal.show();
            });
        });


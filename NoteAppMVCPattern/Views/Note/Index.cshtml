@using NoteAppMVCPattern.Models.ViewModel
@model List<NoteAppMVCPattern.Models.Note>
@*  <div class="text-center">
     	<h2>Not Listesi</h2>
    
</div> *@
@{
    ViewData["Title"] = "Notları Listesi";
<div class="container py-4">

    @if (Model.Count == 0)
    {
        <!-- Empty State -->
        <div class="text-center mt-5">
                <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
                <p class="lead">Hiç notun yok.</p>
                <a asp-action="Create" class="btn btn-lg btn-primary">
                    <i class="bi bi-journal-plus"></i>
                    İlk Notunu Ekle
                </a>

        </div>
    }
    else
    {
       
        <div class="d-flex justify-content-end gap-2 mb-3 ms-2">
            <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-journal-plus"></i> Yeni Not
            </a>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle me-3" data-bs-toggle="dropdown">
                        Sırala
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="?sortOrder=date_desc">Yeniden --> Eskiye</a></li>
                        <li><a class="dropdown-item" href="?sortOrder=date_asc">Eskiden --> Yeniye</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="dropdown-header">Tag'e Göre</li>
                        @foreach (var tag in ViewBag.Tags as List<string>)
                        {
                            <li><a class="dropdown-item" href="?tag=@tag">@tag</a></li>
                        }
                    </ul>
                </div>

        </div>
            
        <div class="row g-3">
            @foreach (var note in Model)
            {
                    <div class="col-12 col-sm-6 col-md-4 mb-4">
                        <div class="card h-100 text-white bg-dark border-4">
                            @if (!string.IsNullOrEmpty(note.Tag))
                            {
                                <span class="badge bg-info text-dark">#@note.Tag</span>
                            }
                        <div class="card-body">
                            <h5 class="card-title ">@note.Title</h5>
                            <p class="card-text text-truncate">@note.Content</p>
                                <p class="card-subtitle text-white-50  text-end">@note.CreateDate.ToShortDateString()</p>
                        </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <form asp-action="Update" asp-route-id="@note.Id" method="get">
                                        <button type="submit" class="btn btn-primary btn-sm me-3">
                                            <i class="bi bi-pencil-square me-1"></i> Düzenle
                                        </button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@note.Id" method="post" style="display: inline;"
                                          onsubmit="return confirm('@note.Title isimli notu silmek istediğinizden emin misiniz?')">
                                        <button type="submit" class="btn btn-danger btn-sm me-3">
                                            <i class="bi bi-trash3"></i> Sil
                                        </button>
                                    </form>
                                </div>
                                <div class="dropdown">
                                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                        Seçenekler
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Tag Ekle</a></li>
                                        @if (!string.IsNullOrEmpty(note.Tag))
                                        {
                                            <li><a class="dropdown-item" href="#">Tag'i Sil</a></li>
                                        }
                                    </ul>
                                </div>

                            </div>                           
                    </div>
                </div>

            }
        </div>
    }

</div>
}

@if (TempData["Message"] != null)
{
	<div id="successMsg" class="alert alert-success mt-3">
		@TempData["Message"]
	</div>
	<script>
		document.addEventListener('DOMContentLoaded', function() {
			setTimeout(function() {
				var msg = document.getElementById('successMsg');
				if (msg) {
					msg.style.transition = 'opacity 0.5s ease';
					msg.style.opacity = '0';
					setTimeout(function() {
						msg.remove();
					}, 500);
				}
			}, 2000);
		});
	</script>
}


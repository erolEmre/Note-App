@using NoteAppMVCPattern.Models.ViewModel
@model RegisterViewModel

<h2>Sign Up</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="text-center"></label>
        <input asp-for="UserName" class="form-control w-50" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="text-center"></label>
        <input asp-for="Password" class="form-control w-50" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary me-3 rounded">Sign Up!</button>
      
        <a asp-controller="User" asp-action="Login" class="btn btn-success me-3 rounded">I'm already a user</a>

        <a asp-controller="User" asp-action="Index" class="btn btn-danger me-3 rounded">Go back</a>
    
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
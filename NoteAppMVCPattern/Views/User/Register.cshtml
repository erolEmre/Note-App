@using NoteAppMVCPattern.Models.ViewModel
@model RegisterViewModel

<h2>Kayıt Ol</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="UserName" class="text-center"></label>
        <input asp-for="UserName" class="form-control w-50" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="text-center"></label>
        <input asp-for="Password" class="form-control w-50" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary me-3 rounded">Kayıt Ol</button>
      
        <a asp-controller="User" asp-action="Login" class="btn btn-success me-3 rounded">Zaten üyeyim</a>

        <a asp-controller="User" asp-action="Index" class="btn btn-danger me-3 rounded">Geri dön</a>
    
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@section Styles {
    <style>
        body {
            background-image: url('/bg-images/bicycle.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }
    </style>
}
@using NoteAppMVCPattern.Models.ViewModel
@using System.Security.Claims
@model NotebookVM;

@{
    Layout = "_noteIndexLayout";
    ViewData["Title"] = "Note Defteri";
}

@await Html.PartialAsync("_TempDataMessage")

<div class="container py-4">
@if (Model.notebooks == null || Model.notebooks.Count == 0)
    {
        <div class="text-center mt-5">
            <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
            <p class="lead">Hiç notun yok.</p>
            <a asp-action="Create" class="btn btn-lg btn-primary">
                <i class="bi bi-journal-plus"></i> İlk Notunu Ekle
            </a>
        </div>
    }

<div class="row">
    @foreach (var nb in Model.notebooks)
    {
           var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">@nb.Name</h4>
                    <p class="card-text">@nb.Description</p>
                    <div>
                            @{
                                var list = nb.User.Notes.ToList();

                                var counter = 0;
                                foreach (var item in list)
                            {                                  
                                if(counter<=3 && list != null)
                                {
                                    <ul>
                                    <li> @item.Title    </li>
                                    <li> @item.Content   </li>
                                   </ul>
                                }
                                counter++;
                            }
                       }
                    </div>
                    <a asp-action="NotebookDetails" asp-route-id="@nb.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye"></i> Görüntüle
                    </a>
                        <a asp-action="Create" class="btn btn-warning btn-sm">
                            <i class="bi bi-journal-plus"></i> Not defteri oluştur
                        </a>
                </div>
            </div>
        </div>
    }
</div>
    
</div>
@using NoteAppMVCPattern.Models.ViewModel
@model NotebookVM;

@{
    Layout = "_noteIndexLayout";
    ViewData["Title"] = "Note Defteri";
}
@await Html.PartialAsync("_TempDataMessage")
<div class="container py-4">
@if (Model.notebooks == null || Model.notebooks.Count == 0)
    {
        <div class="text-center mt-5">
            <i class="bi bi-journal-x display-1 text-muted mb-3"></i>
            <p class="lead">Hiç notun yok.</p>
            <a asp-action="Create" class="btn btn-lg btn-primary">
                <i class="bi bi-journal-plus"></i> İlk Notunu Ekle
            </a>
        </div>
    }
{
<div class="row">
    @foreach (var nb in Model.notebooks)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@nb.Name</h5>
                    <p class="card-text">@nb.Description</p>
                    <a asp-action="NotebookDetails" asp-route-id="@nb.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i> Görüntüle
                    </a>
                </div>
            </div>
        </div>
    }
</div>
    }
</div>
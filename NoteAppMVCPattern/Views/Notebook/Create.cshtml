@using System.Security.Claims
@model NoteAppMVCPattern.Models.Notebook

@{
    ViewData["Title"] = "Yeni Not Defteri Oluştur";
    Layout = "_GeneralCRUDLayout";
}

<h2>Yeni Not Defteri</h2>

<div class="row">
    <div class="col-md-6">
        @* Bu form, bulunduğu Controller'daki (muhtemelen NotebookController) 
           [HttpPost] Create metoduna postalanacak. *@
        <form asp-action="Create">

            @* Model ile ilgili genel hataları göstermek için (örn: "İsim alanı boş olamaz") *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control w-40" />
                @* Hata mesajı bu input'un hemen altında belirir *@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                @* Açıklama için <input> yerine <textarea> daha mantıklı *@
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @{
                var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;            
            <input type="hidden" name="userId" value="@userId" />  
            }

            <div class="mb-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@* Client-side (tarayıcı taraflı) doğrulama için bu bölüm şart *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}